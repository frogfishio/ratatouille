{
  "name": "@frogfish/ratatouille",
  "version": "0.1.6",
  "description": "Tiny DEBUG-style topic logger (callable instances).",
  "main": "dist/index.node.js",
  "types": "dist/index.node.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "DEBUG=* ts-node src/experiment.ts",
    "start:srv": "RATATOUILLE='{\"format\":\"json\",\"filter\":\"*\",\"print\":true}' ts-node src/experiment.ts",
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["debug", "logger", "topic", "tiny"],
  "author": "",
  "license": "GPL-3.0-only",
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "ts-node": "^10.9.2"
  },
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/index.browser.d.ts",
        "import": "./dist/index.browser.js",
        "default": "./dist/index.browser.js"
      },
      "types": "./dist/index.node.d.ts",
      "import": "./dist/index.node.js",
      "require": "./dist/index.node.js",
      "default": "./dist/index.node.js"
    },
    "./relay": {
      "browser": {
        "types": "./dist/relay.worker.d.ts",
        "import": "./dist/relay.worker.js",
        "default": "./dist/relay.worker.js"
      },
      "types": "./dist/relay.d.ts",
      "import": "./dist/relay.js",
      "require": "./dist/relay.js",
      "default": "./dist/relay.js"
    }
  },
  "browser": {
    "./dist/relay.js": "./dist/relay.worker.js"
  },
  "publishConfig": {
    "access": "public"
  }
}
